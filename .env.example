# FastAPI Smoke Test Bot - Environment Configuration

# Service Configuration
DEBUG=false
LOG_LEVEL=INFO
LOG_FORMAT=json

# Database Configuration (PostgreSQL on Retool)
DATABASE_URL=postgresql+asyncpg://retool_user:PLACEHOLDER_PASSWORD@retool-db.postgres.database.azure.com:5432/retool_db
SAMPLE_QUERY=SELECT 1
DB_TIMEOUT=10
DB_RETRIES=3

# API Check Configuration
API_LIST=[
  {
    "name": "Retool Health",
    "method": "GET",
    "url": "https://your-retool-instance.com/api/v1/health",
    "expected_status": 200
  },
  {
    "name": "Retool API Status",
    "method": "GET",
    "url": "https://your-retool-instance.com/api/v1/status",
    "expected_status": 200
  }
]
API_TIMEOUT=10
API_RETRIES=2

# Azure KeyVault Configuration
AZURE_KEYVAULT_NAME=your-keyvault-name
AZURE_SECRET_LIST=[
  "database-password",
  "api-key",
  "jwt-secret"
]
AZURE_CLIENT_ID=PLACEHOLDER_CLIENT_ID
AZURE_CLIENT_SECRET=PLACEHOLDER_CLIENT_SECRET
AZURE_TENANT_ID=PLACEHOLDER_TENANT_ID
AZURE_TIMEOUT=10

# Azure Metrics Configuration (VM Monitoring)
VM_RESOURCE_ID=/subscriptions/PLACEHOLDER_SUBSCRIPTION_ID/resourceGroups/PLACEHOLDER_RESOURCE_GROUP/providers/Microsoft.Compute/virtualMachines/PLACEHOLDER_VM_NAME
METRIC_THRESHOLD_CPU=80
METRIC_THRESHOLD_MEMORY=500
